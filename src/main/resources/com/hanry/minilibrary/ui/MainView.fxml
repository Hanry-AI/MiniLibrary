<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hanry.minilibrary.ui.MainController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <Label text="Mini Library Manager" alignment="CENTER">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <TableView fx:id="bookTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="colTitle" prefWidth="150.0" text="Title" />
                <TableColumn fx:id="colAuthor" prefWidth="150.0" text="Author" />
                <TableColumn fx:id="colYear" prefWidth="75.0" text="Year" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Button fx:id="btnLoad" mnemonicParsing="false" text="Load Binary" />
                <Button fx:id="btnSave" mnemonicParsing="false" text="Save Binary" />
                <Button fx:id="btnExport" mnemonicParsing="false" text="Export XML" />
                <Button fx:id="btnImport" mnemonicParsing="false" text="Import XML" />
            </children>
        </HBox>
    </children>
</VBox> 